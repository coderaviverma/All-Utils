<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aw.avi.allutilsmethodsapp.ui.activity.ImageLoaderActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picasso Image load" />

            <ImageView
                android:id="@+id/iv_picasso"
                android:layout_width="400dp"
                android:layout_height="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glide Image load" />

            <ImageView
                android:id="@+id/iv_glide"
                android:layout_width="400dp"
                android:layout_height="400dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UIL Image loading" />

            <ImageView
                android:id="@+id/iv_uil"
                android:layout_width="400dp"
                android:layout_height="400dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
